<form action="/selectFlight" object="flight" method="post" class="row g-3 formCautare" >
    <div class="headDivForm">
    <div class="col-auto">
        <label for="inputFrom" class="visually-hidden"></label>
        <input type="text" class="form-control" name="inputFrom" id="inputFrom" placeholder="From">
    </div>
    <div class="col-auto">
        <label for="inputTo" class="visually-hidden"></label>
        <input type="text" class="form-control" name="inputTo" id="inputTo" placeholder="To">
    </div>
    <div class="col-auto">
        <label for="depart" class="visually-hidden">Depart</label>
        <input type="date" class="form-control" name="depart" id="depart" placeholder="Depart">
    </div>
    <div class="col-auto">
        <label for="return" class="visually-hidden">Return</label>
        <input type="date" class="form-control" name="return" id="return" placeholder="Return">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Search</button>
    </div>
    </div>
</form>

