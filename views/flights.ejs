<!DOCTYPE html>
<html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <title>Flights</title>
    <link rel="stylesheet" type="text/css" href="../css/flights.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
<div style="display: flex; align-items: center; height: 100%; width: 100%;">
    <img src="../images/airline.png" alt="Imagename" style="margin-right: 10px; width: 30px;">
    <a style="text-decoration: none;" href="/">
        <h1 style="color: white; margin: 0;">MikeLine</h1>
    </a>
</div>

<div style="width: 100%; height: 100%; justify-content: center;" >
    <h1>Flights</h1>
</div>

<% if (locals.flights){%>

<div class="container-zboruri">
<div style="height: 100%; width:50%;" class="outer-div">
    <% flights.forEach(function(flight) { %>
        <div class="flight inner-div" style="width: 100%; height: 100%;">
          <i><b><span><%= flight.takeoff_location %></span></b></i>
          <i class="fa fa-long-arrow-right"></i>
          <i><b><span><%= flight.destination %></span></b></i>
          <p><span><%= flight.date_depart.toLocaleDateString() %></span></p>
          <p><span><%= flight.date_arrival.toLocaleDateString() %></span></p>
          <p><span><%= flight.price %></span>$</p>
          <% if (flight.stopover !== null){%>
          <p>Stopover: <span><%= flight.stopover %></span></p>
          <%}else{%>
            <p>No stopover</p>
            <% } %>
        </div>
      <% }); %>
</div>
</div>
<%}%>

</body>
</html>
